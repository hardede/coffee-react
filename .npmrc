# Default public registry (can be replaced by internal mirror)
registry=https://registry.npmjs.org/

# Auth token is read from environment when needed
# Read token from environment (do NOT hardcode secrets here)
//registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Optional corporate proxy settings (enabled only if env vars are set)
proxy=${HTTP_PROXY}
https-proxy=${HTTPS_PROXY}

# Optional: bypass proxy for local/internal hosts
noproxy=localhost,127.0.0.1,.local

# Keep lockfile package URLs normalized
replace-registry-host=never
